# Frontend environment
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WHATSAPP_WEBHOOK_PUBLIC_URL=https://your-ngrok-or-domain/webhook
VITE_CLOUDINARY_CLOUD_NAME=your_cloud
VITE_CLOUDINARY_UNSIGNED_PRESET=unsigned_upload_preset

# Backend environment
DJANGO_SECRET_KEY=change_me

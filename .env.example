# ============================================
# RAG DATABASE (Pinecone or Local)
# ============================================
RAG_VECTOR_DB_TYPE=pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=trek-and-stay-rag
PINECONE_ENVIRONMENT=us-west-2-aws
EMBEDDING_DIMENSION=1536
EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# RAG DOCUMENT STORAGE & CONFIG
# ============================================
RAG_DOCS_PATH=./data/documents

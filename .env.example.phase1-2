# ============================================
# WhatsApp AI & Phase 1/2 Configuration
# Copy this to your .env file and fill in actual values
# ============================================

# ============================================
# PHASE 1: Admin Dashboard (Django REST API)
# ============================================

# Django settings (usually already set)
DEBUG=False
DJANGO_SETTINGS_MODULE=travel_dashboard.settings
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,trek-and-stay.com

# Database (if using PostgreSQL)
DATABASE_URL=postgres://user:password@localhost:5432/trek_and_stay

# ============================================
# PHASE 2: OpenAI GPT Configuration
# ============================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXX

# OpenAI Model Selection
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
LLM_MODEL=gpt-4-turbo-preview

# LLM Parameters
LLM_TEMPERATURE=0.7              # 0=deterministic, 1=creative
LLM_MAX_TOKENS=500              # Max response length
EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# PHASE 2: Pinecone Vector Database
# ============================================

# Pinecone Configuration
# Get from: https://www.pinecone.io/
PINECONE_API_KEY=pcsk_XXXXXXXXXXXXXXXXXXXXX
PINECONE_ENV=us-east-1           # or your region
PINECONE_INDEX=trek-and-stay-prod
PINECONE_NAMESPACE=main

# RAG Configuration
RAG_TOP_K=5                      # Number of documents to retrieve
RAG_MIN_SCORE=0.3               # Minimum relevance score

# ============================================
# WhatsApp Configuration
# ============================================

# WhatsApp Webhook Verification
WHATSAPP_WEBHOOK_VERIFY_TOKEN=trek_and_stay_verify

# WhatsApp Provider (if using external API)
# Options: mock, wasender, twilio, africas_talking
WHATSAPP_PROVIDER=mock
WHATSAPP_MODE=testing           # testing or production

# WhatsApp Custom Provider Keys (if applicable)
WHATSAPP_API_KEY=your-key
WHATSAPP_API_SECRET=your-secret
WHATSAPP_BUSINESS_ACCOUNT_ID=your-account-id

# ============================================
# Rate Limiting & Throttling
# ============================================

MAX_MESSAGES_PER_HOUR=20
MAX_CONCURRENT_CONVOS=10

# ============================================
# Logging & Monitoring
# ============================================

LOG_ALL_INTERACTIONS=true
TRACK_METRICS=true
SENTRY_DSN=                     # Optional: error tracking

# ============================================
# Admin Credentials
# ============================================

ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production

# ============================================
# CORS Settings
# ============================================

CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://trek-and-stay.com

# ============================================
# EMAIL Configuration (for notifications)
# ============================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ============================================
# Redis (for caching and sessions)
# ============================================

REDIS_URL=redis://localhost:6379/0

# ============================================
# Feature Flags
# ============================================

ENABLE_WHATSAPP_AI=true
ENABLE_RAG=true
ENABLE_AUTO_RESPONSES=true
ENABLE_LEAD_SCORING=true

# ============================================
# PRODUCTION NOTES
# ============================================

# Before deploying to production:
# 1. Set DEBUG=False
# 2. Update SECRET_KEY with a strong value
# 3. Update ALLOWED_HOSTS with your domain
# 4. Use environment variable management (Heroku, Railway, AWS Secrets)
# 5. Enable SSL/HTTPS
# 6. Set up proper database backups
# 7. Configure Sentry for error tracking
# 8. Test WhatsApp integration with real numbers
# 9. Monitor API costs (especially OpenAI)
# 10. Set up logging and monitoring

# ============================================
# Cost Monitoring
# ============================================

# Estimated costs (adjust based on usage):
# OpenAI GPT-4: ~$0.03 per 1K input tokens, ~$0.06 per 1K output tokens
# Pinecone: ~$0.04 per 1M tokens stored
# WhatsApp Business API: Variable based on provider

